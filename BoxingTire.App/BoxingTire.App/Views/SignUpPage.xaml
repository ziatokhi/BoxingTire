<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BoxingTire.App.Views.SignUpPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BoxingTire.App.ViewModels"
    mc:Ignorable="d">
    <ContentPage.BindingContext>
        <vm:SignUpViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                HorizontalTextAlignment="Center"
                Text="Welcome to SignUp Page" />


            <Entry
                x:Name="txtUser"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalOptions="FillAndExpand"
                Keyboard="Email"
                Placeholder="Email Address"
                Text="{Binding UserName}" />




            <Entry
                x:Name="txtPwd"
                Grid.Row="4"
                Grid.Column="0"
                HorizontalOptions="FillAndExpand"
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding Password}" />

            <Entry
                x:Name="txtPwdMatch"
                Grid.Row="5"
                Grid.Column="0"
                HorizontalOptions="FillAndExpand"
                IsPassword="True"
                Placeholder="Retype Password"
                Text="{Binding PasswordMatch}" />
            <Label
                Grid.Row="6"
                Grid.Column="0"
                HorizontalTextAlignment="Center"
                Text="{Binding DisplayMessage}"
                TextColor="{Binding DisplayMessageColor}" />

            <Button
                x:Name="btnLogin"
                Grid.Row="7"
                Grid.Column="0"
                Command="{Binding SignUpCommand}"
                Text="Sign Up" />

            <Label
                Grid.Row="8"
                Grid.Column="0"
                VerticalOptions="EndAndExpand">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Already have account? " />
                        <Span
                            Text="Login"
                            TextColor="Blue"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LoginCommand}" />
                            </Span.GestureRecognizers>
                        </Span>

                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <ActivityIndicator IsRunning="True" IsVisible="{Binding IsBusy}" />

        </Grid>
    </ContentPage.Content>
</ContentPage>
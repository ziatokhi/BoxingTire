<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BoxingTire.App.Views.ChallengeList"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:View="clr-namespace:BoxingTire.App.Views"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BoxingTire.App.ViewModels"
    Title="Challenges Category"
    BackgroundColor="DarkBlue"
    mc:Ignorable="d">
    <ContentPage.BindingContext>
        <vm:ChallengeListViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>

            <CollectionView
                x:Name="CvList"
                BackgroundColor="Black"
                HorizontalOptions="FillAndExpand"
                ItemSizingStrategy="MeasureAllItems"
                ItemsSource="{Binding ChallengeCategoryList}"
                VerticalOptions="FillAndExpand">

                <CollectionView.ItemsLayout>

                    <GridItemsLayout Orientation="Vertical" Span="1" />
                </CollectionView.ItemsLayout>
                <CollectionView.EmptyView>
                    <Label Text="Empty" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Frame Padding="5" BackgroundColor="Black">
                            <Frame Style="{DynamicResource frList}">
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />

                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />



                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Margin="-10"
                                        Aspect="Fill"
                                        HorizontalOptions="Fill"
                                        Source="{Binding ImgSrc}"
                                        VerticalOptions="FillAndExpand" />

                                    <Label
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        FontAttributes="Bold"
                                        FontSize="Title"
                                        Text="{Binding Name}"
                                        TextColor="{DynamicResource primaryTextColor}"
                                        VerticalTextAlignment="Center" />

                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        IsVisible="False"
                                        Text="{Binding Name}"
                                        TextColor="{DynamicResource primaryTextColor}"
                                        VerticalTextAlignment="Center" />

                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        HorizontalTextAlignment="Center"
                                        IsVisible="False"
                                        Text="{Binding Name}"
                                        TextColor="{DynamicResource primaryTextColor}"
                                        VerticalTextAlignment="Center" />

                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        HorizontalTextAlignment="End"
                                        IsVisible="False"
                                        Text="{Binding Name}"
                                        TextColor="{DynamicResource primaryTextColor}"
                                        VerticalTextAlignment="Center" />
                                    <Grid.GestureRecognizers>

                                        <TapGestureRecognizer Command="{Binding BindingContext.CategoryCommand, Source={x:Reference Name=CvList}}" CommandParameter="{Binding Id}" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>